{
  "sourceRoot": "apps/services/api/api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/node:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/api",
        "main": "apps/services/api/api/src/main.ts",
        "tsConfig": "apps/services/api/api/tsconfig.app.json",
        "assets": ["apps/services/api/api/src/assets"],
        "tsPlugins": [
          {
            "name": "@nestjs/swagger/plugin",
            "options": {
              "dtoFileNameSuffix": [".dto.ts", ".model.ts"]
            }
          }
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/services/api/api/src/environments/environment.ts",
              "with": "apps/services/api/api/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "api:build"
      }
    },
    "serve-all": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": true,
        "commands": ["nx serve api", "docker-compose up"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/services/api/api/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/services/api/api"],
      "options": {
        "jestConfig": "apps/services/api/api/jest.config.js",
        "passWithNoTests": true
      }
    }
  }
}

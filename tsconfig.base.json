{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@data-platform/api/api": ["apps/services/api/api/src/index.ts"],
      "@data-platform/api/data-access-article": [
        "libs/api/api/data-access-article/src/index.ts"
      ],
      "@data-platform/api/data-access-dtos": [
        "libs/api/api/data-access-dtos/src/index.ts"
      ],
      "@data-platform/api/feature-article": [
        "libs/api/api/feature-article/src/index.ts"
      ],
      "@data-platform/api/feature-config": [
        "libs/api/api/feature-config/src/index.ts"
      ],
      "@data-platform/api/utils-config": [
        "libs/api/api/utils-config/src/index.ts"
      ],
      "@data-platform/article/data-access-api": [
        "libs/api/article/data-access-api/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
